{
  "name": "trash-talk-ai",
  "version": "1.0.0",
  "description": "A hilarious trash talk feature for AI agents that roasts opponents with wit and humor",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "example": "node dist/example.js",
    "prepare": "husky",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "ai",
    "trash-talk",
    "humor",
    "roasting",
    "comedy"
  ],
  "author": "Blackbox AI",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.19.21",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.5.5",
    "husky": "^9.1.7",
    "jest": "^29.0.0",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
